<van-cell size="large" is-link icon="add" title="我要开课" bind:click="open"/>
<van-cell size="large" is-link icon="diamond" title="成绩录入" bind:click="type_in"/>
<van-cell size="large" is-link icon="column" title="课程查询" bind:click="query"/>
<van-cell size="large" is-link icon="star" title="创作团队信息" bind:click	='author' />

